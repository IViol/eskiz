{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["@figma/plugin-typings"],
    "target": "ES2017",
    "module": "None",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "esModuleInterop": false,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
